{
  "version": 2,
  "name": "mia-warehouse-management",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "s-maxage=31536000,immutable"
      }
    },
    {
      "src": "/sw.js",
      "headers": {
        "cache-control": "s-maxage=0",
        "service-worker-allowed": "/"
      }
    },
    {
      "src": "/manifest.json",
      "headers": {
        "cache-control": "s-maxage=86400"
      }
    },
    {
      "src": "/favicon.ico",
      "headers": {
        "cache-control": "s-maxage=86400"
      }
    },
    {
      "src": "/logo(.*)\\.png",
      "headers": {
        "cache-control": "s-maxage=86400"
      }
    },
    {
      "src": "/auth/login",
      "dest": "/index.html",
      "headers": {
        "cache-control": "s-maxage=0"
      }
    },
    {
      "src": "/dashboard",
      "dest": "/index.html",
      "headers": {
        "cache-control": "s-maxage=0"
      }
    },
    {
      "src": "/google-sheets",
      "dest": "/index.html",
      "headers": {
        "cache-control": "s-maxage=0"
      }
    },
    {
      "src": "/google-drive",
      "dest": "/index.html",
      "headers": {
        "cache-control": "s-maxage=0"
      }
    },
    {
      "src": "/automation",
      "dest": "/index.html",
      "headers": {
        "cache-control": "s-maxage=0"
      }
    },
    {
      "src": "/ai-analytics",
      "dest": "/index.html",
      "headers": {
        "cache-control": "s-maxage=0"
      }
    },
    {
      "src": "/telegram",
      "dest": "/index.html",
      "headers": {
        "cache-control": "s-maxage=0"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "build": {
    "env": {
      "CI": "false",
      "GENERATE_SOURCEMAP": "false",
      "NODE_OPTIONS": "--max-old-space-size=4096",
      "REACT_APP_VERSION": "1.0.0",
      "REACT_APP_BUILD_DATE": "2025-01-26"
    }
  },
  "functions": {
    "app/api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  }
}
